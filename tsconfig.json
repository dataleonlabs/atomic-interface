{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./lib",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], 
    "module": "esnext",
    "allowJs": true,
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": "src",
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "rootDirs": [
      "src",
      "stories"
    ],
    "noEmit": true,
    "isolatedModules": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx",
    "src/setupTests.ts"
  ]
}
