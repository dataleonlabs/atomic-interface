{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "defaultSeverity": "warning",
  "linterOptions": {
    "exclude": [
      "./src/**/*.test.tsx",
      "./src/**/*.stories.tsx",
      "./samples",
      "node_modules/**/*.ts",
      "./src/serviceWorker.ts",
      "./src/react-app-env.d.ts",
      "styleguide/**/*.*",
      "./docs/**/*.*",
      "styleguide.*.js"
    ]
  },
  "rules": {
    "no-any": true,
    "ordered-imports": false,
    "require-jsdoc": true,
    "no-empty-interface": false,
    "interface-name": false
  }
}
